<button id="submit-btn" class="flex items-center cursor-pointer rounded-lg bg-indigo-500 text-white tracking-wide gap-2 font-medium text-sm px-4 py-2">
    Submit
    <svg xmlns="http://www.w3.org/2000/svg" class="size-4.5" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
    </svg>
</button>

<% content_for :scripts do %>
  <script>
    function disableButton() {
        let btn = document.getElementById("submit-btn");
        btn.setAttribute("disabled", "true");
        btn.classList.remove("cursor-pointer");
        btn.classList.add("opacity-50", "cursor-not-allowed");
    }
  </script>
<% end %>