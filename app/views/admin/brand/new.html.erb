<div class="">
    <div class="header mb-6">
        <h1 class="text-2xl font-medium text-slate-600">Form Brand</h1>
    </div>
    <div class="bg-white w-full h-[400px] shadow rounded-lg">
        <div class="title px-4 pt-4 flex items-center gap-3">
            <div class="bg-indigo-100 w-max p-1.5 rounded-full">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-aperture text-indigo-600 "><circle cx="12" cy="12" r="10"/><path d="m14.31 8 5.74 9.94"/><path d="M9.69 8h11.48"/><path d="m7.38 12 5.74-9.94"/><path d="M9.69 16 3.95 6.06"/><path d="M14.31 16H2.83"/><path d="m16.62 12-5.74 9.94"/></svg>
            </div>
            <h1 class="text-slate-600 tracking-wide font-medium">New Brand</h1>
        </div>
        <%= render "shared/hr" %>
        <!-- , html: {onsubmit: "disableButton()"} -->
        <%= form_with url: brands_path, method: :post, data: { turbo: false } do |f| %>
            <div class="px-4 flex flex-col min-h-[300px]">
                <div class="">
                    <label for="name" class="text-sm text-slate-500 font-medium">Nama Brand</label>
                    <div class="relative">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#94a3b8" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-webhook absolute ms-3 top-[50%] translate-y-[-50%]"><path d="M18 16.98h-5.99c-1.1 0-1.95.94-2.48 1.9A4 4 0 0 1 2 17c.01-.7.2-1.4.57-2"/><path d="m6 17 3.13-5.78c.53-.97.1-2.18-.5-3.1a4 4 0 1 1 6.89-4.06"/><path d="m12 6 3.13 5.73C15.66 12.7 16.9 13 18 13a4 4 0 0 1 0 8"/></svg>
                        <input required type="text" name="name" id="name" value="<%= params[:name] %>" placeholder="Something here .." class="block focus:ring-1 focus:ring-indigo-400 border-slate-300 text-slate-600 text-sm border w-full focus:outline-none ps-11 pe-4 py-3 rounded-lg mt-1">
                    </div>
                </div>
                <div class="flex justify-center gap-2 mt-auto">
                    <a href="/app/brands" data-turbo="false" class="flex items-center rounded-lg bg-slate-200/50 text-slate-900 tracking-wide gap-2 font-medium text-sm px-4 py-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="size-4.5" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M7.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd"></path>
                        </svg>
                        Kembali
                    </a>
                    <button class="flex items-center cursor-pointer rounded-lg bg-indigo-500 text-white tracking-wide gap-2 font-medium text-sm px-4 py-2">
                        Submit
                        <svg xmlns="http://www.w3.org/2000/svg" class="size-4.5" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                        </svg>
                    </button>
                </div>
            </div>
        <% end %>

    </div>
</div>