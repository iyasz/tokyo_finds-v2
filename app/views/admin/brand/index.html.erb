<div class="grid grid-cols-12 gap-5 w-full">
    <div class="md:col-span-9 col-span-12 md:order-1 order-2">
        <div class="flex items-center gap-3">
            <div class="bg-indigo-100 py-2 px-3 rounded-full flex items-center justify-center">
                <p class="font-semibold text-indigo-600 leading-none text-2xl">B</p>
            </div>
            <h1 class="text-[22px] text-slate-700 font-semibold">Brand List</h1>
        </div>
        <div class="my-4 overflow-x-auto sm:overflow-visible">
            <div class="grid grid-cols-12 gap-5 flex-nowrap min-w-[600px]">
                <div class="col-span-4 w-full bg-white h-[150px] rounded-lg shadow p-3">
                    <div class="border border-indigo-400 rounded-lg h-full p-3"></div>
                </div>
                <div class="col-span-4 w-full bg-white h-[150px] rounded-lg shadow p-3">
                    <div class="border border-indigo-400 rounded-lg h-full p-3"></div>
                </div>
                <div class="col-span-4 w-full bg-white h-[150px] rounded-lg shadow p-3">
                    <div class="border border-indigo-400 rounded-lg h-full p-3"></div>
                </div>
            </div>
        </div>
        <div class="mt-5">
            <h1 class="font-medium text-slate-500">New Brands</h1>
            <div class="bg-white shadow">
                <div class="mt-4 overflow-auto">
                    <table class="w-full">
                        <thead class="bg-slate-200 rounded-t-lg h-[45px]">
                            <th>NO</th>
                            <th>NAMA</th>
                            <th>CREATED AT</th>
                            <th>AKSI</th>
                        </thead>
                        <tbody class="bg-white">
                            <% @brands.each_with_index do |brand, index| %>
                                <tr class="border-b border-slate-200">
                                    <td><%= index+1 %></td>
                                    <td><%= brand.name %></td>
                                    <td>
                                        <p><%= brand.created_at.strftime("%d %b %Y") %></p>
                                        <p class="text-xs text-slate-500"><%= brand.created_at.strftime("%I:%M %p") %></p>
                                    </td>
                                    <td class="flex gap-2 items-center justify-center">
                                        <%= button_to brand_path(brand), method: :delete, data: { turbo: false }, class: "bg-red-100 text-red-600 p-2 rounded-full",
                                        onclick: "return confirm('Apakah anda ingin menghapus data ini?')" do %>
                                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-trash-2">
                                                <path d="M3 6h18"/>
                                                <path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"/>
                                                <path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"/>
                                                <line x1="10" x2="10" y1="11" y2="17"/>
                                                <line x1="14" x2="14" y1="11" y2="17"/>
                                            </svg>
                                        <% end %>
                                    
                                        <a href="/app/brands/<%= brand.id %>/edit" data-turbo="false" class="bg-blue-100 text-blue-600 p-2 rounded-full">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-pencil"><path d="M21.174 6.812a1 1 0 0 0-3.986-3.987L3.842 16.174a2 2 0 0 0-.5.83l-1.321 4.352a.5.5 0 0 0 .623.622l4.353-1.32a2 2 0 0 0 .83-.497z"/><path d="m15 5 4 4"/></svg>
                                        </a>
                                    </td>
                                </tr>
                            <% end %>
                            
                        </tbody>
                    </table>
                </div>
                <div class="pagination my-6 flex justify-center gap-2 pb-5">
                    <% if @current_page > 1 %>
                        <%= link_to brands_path(page: @current_page - 1), class: "px-4 py-2 bg-gray-200 rounded-full text-sm" do %>
                            <svg xmlns="http://www.w3.org/2000/svg" class="size-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"></path>
                            </svg>
                        <% end %>
                    <% end %>
                    
                    <% (1..@total_pages).each do |page| %>
                        <% if page == @current_page %>
                            <span class="px-4 py-2 bg-indigo-500 text-white rounded-full text-sm"><%= page %></span>
                        <% else %>
                            <%= link_to page, brands_path(page: page), class: "px-4 py-2 bg-gray-200 rounded-full text-sm" %>
                        <% end %>
                    <% end %>
                    
                    <% if @current_page < @total_pages %>
                        <%= link_to brands_path(page: @current_page + 1), class: "flex items-center gap-2 px-4 py-2 bg-gray-200 rounded-full text-sm" do %>
                            <svg xmlns="http://www.w3.org/2000/svg" class="size-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                            </svg>
                        <% end %>
                    <% end %>
                </div>
            </div>

              
        </div>
    </div>
    <div class="md:col-span-3 col-span-12 md:order-2 order-1">
        <div class="bg-gradient-to-br from-indigo-400 to-indigo-600 w-full rounded-lg p-4 shadow-lg">
            <div class="w-full">
                <div class="mb-4">
                    <h1 class="font-medium text-white/90 tracking-wide mb-2">Total Brand</h1>
                    <h1 class="text-4xl text-white font-bold">430</h1>
                    <div class="mt-2">
                        <p class="text-xs text-white/60">7 hari terakhir</p>
                        <p class="text-white/90 text-xs font-semibold">+20</p>
                    </div>
                </div>
                <a href="/app/brands/new" data-turbo="false" class="w-full block backdrop-blur-xl font-medium bg-white/30 py-2 rounded-lg text-white text-sm text-center">
                    New Brands
                </a>
            </div>
        </div>
    </div>
</div>
