<div class="navbar w-full bg-white/70 backdrop-blur-sm h-[60px] flex items-center border-b border-slate-200/80 sticky top-0 right-0 left-0 z-[95]">
    <div class="md:px-5 px-3 flex items-center lg:justify-end justify-between w-full">
        <button class="lg:hidden block" id="btn-open-sidebar">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#4f46e5 " stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-align-left"><path d="M15 12H3"/><path d="M17 18H3"/><path d="M21 6H3"/></svg>
        </button>
        <div class="">
            <div class="flex items-center relative">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-search text-slate-400 absolute ms-3"><circle cx="11" cy="11" r="8"/><path d="m21 21-4.3-4.3"/></svg>
                <input type="text" name="" id="" placeholder="Search here .." class="w-[250px]  bg-slate-100 ps-10 pe-3 py-[10px] text-slate-600 rounded-full focus:outline-none text-xs">
            </div>
        </div>
    </div>
</div>

<% content_for :scripts do %>
  <script>
    document.addEventListener("DOMContentLoaded", function () {
        let btn = document.getElementById("btn-open-sidebar");
        let sidebar_main = document.querySelector(".sidebar_main");
        let sidebar_child = document.querySelector(".sidebar_child");
        let backdrop_sidebar = document.querySelector(".backdrop_sidebar");

        function toggleSidebar() {
            sidebar_main.classList.toggle("translate-x-[-100%]");
            sidebar_main.classList.toggle("translate-x-[0]");

            backdrop_sidebar.classList.toggle("hidden");
            backdrop_sidebar.classList.toggle("block");

            sidebar_child.classList.toggle("translate-x-[-155%]");
            sidebar_child.classList.toggle("translate-x-[0]");
        }

        btn.addEventListener("click", toggleSidebar);

        backdrop_sidebar.addEventListener("click", toggleSidebar);
    });


  </script>
<% end %>